set -e

cat <<EOF > /etc/systemd/system/haos-installer.service
[Unit]
Description=Start HAOS Installer
After=getty.target

[Service]
Type=simple
ExecStart=/bin/start-installer
Restart=always
StandardInput=tty-force
StandardOutput=inherit
StandardError=inherit
TTYPath=/dev/tty1
TTYReset=yes
TTYVHangup=yes

[Install]
WantedBy=getty.target
EOF

systemctl daemon-reload
systemctl enable haos-installer.service
